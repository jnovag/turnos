

<h1> Recepciones</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Tiempo Espera</th>
      <th>Nombre</th>
      <th>Asunto</th>
      <th>Descripcion</th>
      <th>Ingreso</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @recepciones.each do |recepcion| %>
      <tr>
        <td><%= distance_of_time_in_words_to_now(recepcion.hora_ingreso) %></td>
        <td><%= recepcion.nombre %></td>
        <td><%= recepcion.asunto %></td>
        <td><%= recepcion.descripcion %></td>
        <td><%= recepcion.hora_ingreso  %></td>
        <td><%= link_to 'Ver', recepcion %></td>
        <td><%= link_to 'Editar', edit_recepcion_path(recepcion) %></td>
        <td><%= link_to 'Borrar', recepcion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Atender', atender_recepcion_path(recepcion) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

