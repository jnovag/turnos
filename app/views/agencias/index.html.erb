
<div class="row">
  <div class="col-md-6">
    <h3>Agencias</h3>
  </div>
  <div class="col-md-6">
    <div class="btn-group pull-right">
      <%= link_to 'Buscar', '#', class: 'btn btn-default', data: { target: '#myModal', toggle: 'modal' } %>
      <div class="btn-group">
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Descargar
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to 'PDF', agencias_path(format: :pdf) %></li>
            <li><%= link_to 'CSV', agencias_path(format: :csv) %></li>
          </ul> 
        </div>
      </div>
    </div>
  </div>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Zona</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agencias.each do |agencia| %>
      <tr>
        <td><%= agencia.nombre %></td>
        <td><%= agencia.direccion %></td>
        <td><%= agencia.telefono %></td>
        <td><%= agencia.zona %></td>
        <td><%= agencia.numero %></td>
        <td><%= link_to 'Show', agencia %></td>
        <td><%= link_to 'Edit', edit_agencia_path(agencia) %></td>
        <td><%= link_to 'Destroy', agencia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Agencia', new_agencia_path %>

<%= render partial: 'share/busqueda', locals: { campos_busqueda: [:nombre_cont, :direccion_cont, :telefono_cont, :numero_eq]} 
 %>

